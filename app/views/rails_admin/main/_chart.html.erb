<script type="text/javascript">
    /**
 * (c) 2010-2018 Torstein Honsi
 *
 * License: www.highcharts.com/license
 *
 * Grid-light theme for Highcharts JS
 * @author Torstein Honsi
 */

Highcharts.theme = {
    colors: ['#7cb5ec', '#f7a35c', '#90ee7e', '#7798BF', '#aaeeee', '#ff0066',
        '#eeaaee', '#55BF3B', '#DF5353', '#7798BF', '#aaeeee'],
    chart: {
        backgroundColor: null,
        style: {
            fontFamily: 'Dosis, sans-serif'
        },
        height: 600
    },
    title: {
        style: {
            fontSize: '16px',
            fontWeight: 'bold',
            textTransform: 'uppercase'
        }
    },
    tooltip: {
        borderWidth: 0,
        backgroundColor: 'rgba(255,255,255,0.8)',
        borderColor: '#000',
        borderRadius: 10,
        color: '#fff',
        shadow: false
    },
    legend: {
        itemStyle: {
            fontWeight: 'bold',
            fontSize: '13px'
        }
    },
    xAxis: {
        gridLineWidth: 1,
        labels: {
            style: {
                fontSize: '12px'
            }
        }
    },
    yAxis: {
        minorTickInterval: 'auto',
        title: {
            style: {
                textTransform: 'uppercase'
            }
        },
        labels: {
            style: {
                fontSize: '12px'
            }
        }
    },
    plotOptions: {
        candlestick: {
            lineColor: '#404048'
        }
    },


    // General
    background2: '#F0F0EA'

};

// Apply the theme
Highcharts.setOptions(Highcharts.theme);

    $(function () {
        var chart;
        $(document).ready(function() {
            chart = new Highcharts.Chart({
                chart: {
                  <% if @abstract_model.model.chart_type == "column" %>
                    type: 'column',
                  <% end %>
                  renderTo: 'growth_rate'
                },
                title: {
                    text: '<%= @abstract_model.to_s.pluralize %>'
                },
                xAxis: {

                  labels: {
                  <% if @abstract_model.model.label_rotation == "-45" %>
                    rotation: -45,
                  <% elsif @abstract_model.model.label_rotation == "-90" %>
                    rotation: -90,
                  <% end %>
                  align: 'right'
                  },
                <% if @abstract_model.model.xaxis == "datetime" %>
                  type: 'datetime'
                <% elsif @abstract_model.model.chart_type == "pie" %>
                <% else %>
                  categories: <%=raw @abstract_model.model.xaxis.to_json %>
                <% end %>

                },


                <% if @abstract_model.model.respond_to?(:yaxis_raw) %>
                    yAxis: <%= raw @abstract_model.model.yaxis_raw  %>,
                <% end %>

                <% if @abstract_model.model.respond_to?(:annotations_data) %>
                    annotations: <%= raw @abstract_model.model.annotations_data.to_json  %>,
                <% end %>

//                yAxis: {
//                    title: {
//                        text: 'Counts'
//                    }
//                },
                <%#tooltip: {%>
                    <%#formatter: function() {%>
                        <%#return ''+%>
                                <%#Highcharts.dateFormat('%e. %b', this.x) +' -> '+ this.y;%>
                    <%#}%>
                <%#},%>

                plotOptions: {
                    column: {
                        stacking: 'normal',
                        tooltip: {
                            pointFormat: '<span style="color:{series.color}">{series.name}</span>: <b>{point.y}</b> ({point.percentage:.0f}%)<br/>',
                            shared: true
                        },
                    },
                    line: {
                        dataLabels: {
                            enabled: true
                        }
                    },
                    spline: {
                        lineWidth: 4,
                        states: {
                            hover: {
                                lineWidth: 5
                            }
                        },
                        marker: {
                            enabled: false,
                            states: {
                                hover: {
                                    enabled: true,
                                    symbol: 'circle',
                                    radius: 5,
                                    lineWidth: 1
                                }
                            }
                        }
                    }
                },
                <% if @abstract_model.model.chart_type == "pie" %>
                  series: [{
                    type: 'pie',
                    name: 'Number of <%= @abstract_model.to_s.pluralize %>',
                    data: <%=raw @abstract_model.model.graph_data.to_json %>
                  }],
                <% else %>
                  series: <%=raw @abstract_model.model.graph_data.to_json %>,
                <% end %>
                navigation: {
                    menuItemStyle: {
                        fontSize: '10px'
                    }
                }
            });
        });
    });
</script>
